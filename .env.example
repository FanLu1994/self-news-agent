# DeepSeek API Configuration (Default)
# 获取 API Key: https://platform.deepseek.com/
OPENAI_API_KEY=sk-your-deepseek-api-key-here
OPENAI_BASE_URL=https://api.deepseek.com

# Multi-LLM config (provider/model)
LLM_PROVIDER=openai
LLM_MODEL=deepseek-chat

# Optional fallback list (provider:model,provider:model)
# LLM_CANDIDATES=openai:deepseek-chat,openai:gpt-4o,anthropic:claude-sonnet-4-20250514,google:gemini-2.5-flash

# Optional: Other provider keys
# ZAI_API_KEY=your_zai_key
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_GENERATIVE_AI_API_KEY=your_google_key

# ========== 可配置选项 ==========

# 关键字过滤（留空表示不过滤，推荐留空获取全量内容）
NEWS_KEYWORDS=
X_KEYWORDS=ai,llm,agent,coding,developer

# 每个来源的最大文章数
MAX_ITEMS_PER_SOURCE=20

# 时间范围（1d, 3d, 7d）
NEWS_TIME_RANGE=7d

# 摘要风格（brief, detailed, keywords）
SUMMARY_STYLE=detailed

# ========== 数据源配置 ==========

# 通用 RSS 源（逗号分隔）
# RSS_FEEDS=https://www.jiqizhixin.com/rss,https://www.technologyreview.com/feed/,https://hnrss.org/frontpage

# VE2X
VE2X_FEEDS=https://www.v2ex.com/index.xml
INCLUDE_VE2X=true

# Linux.do
LINUX_DO_FEEDS=https://linux.do/latest.rss
INCLUDE_LINUX_DO=true

# Reddit（AI/LLM/Agent 相关论坛）
REDDIT_FEEDS=https://www.reddit.com/r/artificial/.rss,https://www.reddit.com/r/MachineLearning/.rss,https://www.reddit.com/r/deeplearning/.rss,https://www.reddit.com/r/LocalLLaMA/.rss,https://www.reddit.com/r/OpenAI/.rss,https://www.reddit.com/r/compsci/.rss
INCLUDE_REDDIT=true

# Product Hunt
PRODUCT_HUNT_FEEDS=https://www.producthunt.com/feed
INCLUDE_PRODUCT_HUNT=true

# Twitter/X（需要配置 X_BEARER_TOKEN）
INCLUDE_TWITTER=false

# ========== 其他配置 ==========

# X/Twitter API
# X_BEARER_TOKEN=your_x_api_bearer_token

# GitHub Trending（爬虫 https://github.com/trending）
INCLUDE_GITHUB_TRENDING=true
# Optional: GitHub Token (用于其他 GitHub API 调用，非必需)
# GITHUB_TOKEN=ghp_xxx

# Telegram (push + chat)
# TELEGRAM_BOT_TOKEN=123456:abcDEF
# TELEGRAM_CHAT_ID=123456789  # 可选：限制只允许这个 chat id 对话

# RSS output path
OUTPUT_RSS_PATH=output/news-digest.xml
OUTPUT_DAILY_DIR=docs/daily
TOPIC_STATS_PATH=data/topic-stats-history.json
README_PATH=README.md
UPDATE_README=true

# Email push (Resend)
EMAIL_ENABLED=false
RESEND_API_KEY=
EMAIL_FROM=Self News <digest@yourdomain.com>
EMAIL_TO=you@example.com

# Optional: Proxy settings (if RSS feeds are blocked)
# HTTP_PROXY=http://localhost:7890
# HTTPS_PROXY=http://localhost:7890
